			"name": "Get All Products",
			"request": {
				"method": "GET",
				"url": {
					"raw": "{{baseUrl}}/api/products",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"products"
					]
				},
				"description": "Retrieves all products"
			},
			"response": []
		},
		{
			"name": "Get Featured Product",
			"request": {
				"method": "GET",
				"url": {
					"raw": "{{baseUrl}}/api/products/featured",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"products",
						"featured"
					]
				},
				"description": "Retrieves the featured product"
			},
			"response": []
		},
		{
			"name": "Add New Product",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "\"Strawberry\""
				},
				"url": {
					"raw": "{{baseUrl}}/api/products",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"products"
					]
				},
				"description": "Add a new product"
			},
			"response": []
		},
		{
			"name": "Update Product",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "\"Green Apple\""
				},
				"url": {
					"raw": "{{baseUrl}}/api/products/1",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"products",
						"1"
					]
				},
				"description": "Update a product by ID"
			},
			"response": []
